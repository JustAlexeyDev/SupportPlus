{
  "name": "frontend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "react-scripts --max_old_space_size=1024 start",
    "build": "react-scripts --max_old_space_size=1024 build",
    "dev": "node --max-old-space-size=1024 node_modules/.bin/react-scripts start",
    "build:prod": "node --max-old-space-size=1024 node_modules/.bin/react-scripts build",
    "build:light": "GENERATE_SOURCEMAP=false node --max-old-space-size=1024 node_modules/.bin/react-scripts build",
    "build:optimized": "NODE_OPTIONS='--max-old-space-size=1024' GENERATE_SOURCEMAP=false DISABLE_ESLINT_PLUGIN=true bun run build",
    "deploy:full": "bun run build:optimized && chmod +x ./deploy.sh && ./deploy.sh",
    "deploy:ci": "bun run build:optimized && rsync -av --delete build/ /usr/share/nginx/html/ && sudo systemctl reload nginx",
    "deploy:docker": "bun run build:optimized && docker build -t my-app . && docker-compose up -d"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.13.2",
    "crypto-js": "^4.2.0",
    "js-cookie": "^3.0.5",
    "lucide-react": "^0.553.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router": "^7.9.6",
    "react-router-dom": "^7.9.6",
    "react-scripts": "^5.0.1"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
